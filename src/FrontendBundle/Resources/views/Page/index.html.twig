{% block javascripts %}
  {{ parent() }}
  <script src="/libs/jquery-localScroll/jquery.localScroll.min.js" type="text/javascript"></script>
  <script src="/libs/jquery-scrollTo/jquery.scrollTo.min.js" type="text/javascript"></script>
  <script src="/libs/jquery-parallax/jquery-parallax.js" type="text/javascript"></script>
  <script src="/libs/waypoints/waypoints.min.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).on('ready', function () {
      $('body > header').localScroll({offset: -110});
      $("video").prop('muted', true); //mute
      $('section').waypoint(function (direction) {
        if (direction === "down") {
          $('#digitroup-menu a').removeClass('active');
          $('#digitroup-menu li:nth-child(' + ($(this).index() * 1 - 1) + ') a').addClass('active');
        } else {
          $('#digitroup-menu li:nth-child(' + ($(this).index() * 1 - 2) + ') a').addClass('active');
          $('#digitroup-menu li:nth-child(' + ($(this).index() * 1 - 1) + ') a').removeClass('active');
        }
      }, {offset: 110});
    });


  </script>
{% endblock javascripts %}
