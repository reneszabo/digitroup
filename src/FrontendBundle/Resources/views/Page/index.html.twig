{% extends 'base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <style type=text/css>

    #home{
      padding-top: 0;
      position: relative;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }
    .section-video{
      height: 1200px;
    }
    .video-overlay {
      background: url(/img/dot.png) rgba(0, 0, 0, 0.5);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 34;
      opacity: 0.7;
    }
    .video-overlay-text {
      width: 100%;
      color: white;
      position: absolute;
      top: 35%;
      left: 0;
      z-index: 36;
    }
    .digitroup-thumb{
      margin-top: 30px;
      margin-bottom: 30px;
    }
    .digitroup-thumb img{  
      margin-bottom: 15px; 
      width: 200px; 
      height: 200px;
    }
    .digitroup-shadow {
      display: inline-block;
      position: relative;
      -webkit-transition-duration: .3s;
      transition-duration: .3s;
      -webkit-transition-property: -webkit-transform;
      transition-property: transform;
      -webkit-transform: translateZ(0);
      transform: translateZ(0);
      box-shadow: 0 0 1px transparent;
      margin: 0 0 25px;
    }
    .digitroup-shadow:active, .digitroup-shadow:focus, .digitroup-shadow:hover {
      -webkit-transform: translateY(-5px);
      transform: translateY(-5px);
    }
    .digitroup-shadow:before {
      pointer-events: none;
      position: absolute;
      z-index: -1;
      content: '';
      top: 100%;
      left: 5%;
      height: 10px;
      width: 90%;
      opacity: 0;
      background: -webkit-radial-gradient(center,ellipse,rgba(0,0,0,.35) 0,transparent 80%);
      background: radial-gradient(ellipse at center,rgba(0,0,0,.35) 0,transparent 80%);
      -webkit-transition-duration: .3s;
      transition-duration: .3s;
      -webkit-transition-property: -webkit-transform,opacity;
      transition-property: transform,opacity;
    }
    .digitroup-shadow:active:before, .digitroup-shadow:focus:before, .digitroup-shadow:hover:before {
      opacity: 1;
      -webkit-transform: translateY(5px);
      transform: translateY(5px);
    }
    #team > .container{
      margin-top: 45px;
    }
    #services{
      padding-bottom: 0;
    }
  </style>
{% endblock stylesheets %}
{% block body %}
